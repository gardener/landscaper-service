landscaper-service:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor: ~
      publish:
        dockerimages:
          landscaper-service-controller:
            registry: 'gcr-readwrite'
            target: 'landscaper-service-controller'
            image: eu.gcr.io/gardener-project/landscaper-service/landscaper-service-controller
          landscaper-service-webhooks-server:
            registry: 'gcr-readwrite'
            target: 'landscaper-service-webhooks-server'
            image: eu.gcr.io/gardener-project/landscaper-service/landscaper-service-webhooks-server
    steps:
      verify:
        image: 'golang:1.18.3'
      publish-helm-charts:
        depends:
        - verify

  jobs:
    head-update:
      steps:
        run_integration_test:
          depends:
            - publish
            - publish-helm-charts
          image: 'golang:1.18.3-alpine3.16'
          execute:
            - "integration_test"
          output_dir: 'integration_test'
      traits:
        draft_release: ~
        scheduling:
          suppress_parallel_execution: true
        notifications:
          default:
            on_error:
              triggering_policy: 'always'
              recipients:
              - committers
              - codeowners
    pull-request:
      steps:
        run_integration_test:
          depends: 
          - publish
          - publish-helm-charts
          image: 'golang:1.18.3-alpine3.16'
          execute:
          - "integration_test"
          output_dir: 'integration_test'
      traits:
        pull-request: ~
        draft_release: ~
        options:
          public_build_logs: True
        scheduling:
          suppress_parallel_execution: true
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/release'
          next_version_callback: '.ci/next_version'
          git_tags:
          - ref_template: 'refs/tags/{VERSION}'
