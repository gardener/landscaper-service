landscaper-service:
  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess: 'inject-commit-hash'
        inject_effective_version: true
      component_descriptor:
        ocm_repository: landscaper
    steps:
      verify:
        image: 'golang:1.21.7'
      ocm_build_and_publish:
        image: europe-docker.pkg.dev/gardener-project/releases/cicd/job-image:1.2360.0
        privilege_mode: privileged
        trait_depends:
          - version
        depends:
          - verify
        execute:
          - component_descriptor_ocm

  jobs:
    head-update:
      steps:
        run_integration_test:
          depends:
            - ocm_build_and_publish
          image: 'europe-docker.pkg.dev/sap-gcp-cp-k8s-stable-hub/landscaper/integration-test:1.21.7-alpine3.18'
          execute:
            - "integration_test"
          output_dir: 'integration_test'
      traits:
        draft_release: ~
        scheduling:
          suppress_parallel_execution: true
        notifications:
          default:
            on_error:
              triggering_policy: 'always'
              recipients:
              - committers
              - codeowners
    pull-request:
      steps:
        run_integration_test:
          depends:
            - ocm_build_and_publish
          image: 'europe-docker.pkg.dev/sap-gcp-cp-k8s-stable-hub/landscaper/integration-test:1.21.7-alpine3.18'
          execute:
          - "integration_test_pr"
          output_dir: 'integration_test'
      traits:
        pull-request: ~
        draft_release: ~
        options:
          public_build_logs: True
        scheduling:
          suppress_parallel_execution: true
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          release_callback: '.ci/release'
          next_version_callback: '.ci/next_version'
          git_tags:
          - ref_template: 'refs/tags/{VERSION}'
        scheduling:
          suppress_parallel_execution: true
      steps:
        run_integration_test:
          depends:
            - ocm_build_and_publish
          image: 'europe-docker.pkg.dev/sap-gcp-cp-k8s-stable-hub/landscaper/integration-test:1.21.7-alpine3.18'
          execute:
            - "integration_test"
          output_dir: 'integration_test'
        update_release:
          inputs:
            INTEGRATION_TEST_PATH: integration_test_path
          execute:
            - update_release.py
          trait_depends:
            - release
          depends:
            - run_integration_test
